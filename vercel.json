{
  "version": 2,
  "builds": [
    {
      "src": "FE/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "BE/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/BE/(.*)",
      "dest": "/BE/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/FE/$1"
    }
  ],
  "dev": {
    "command": "npx vite",
    "port": 3000
  }
}